@page "/"

<h1>Hola mundo!</h1>

Bienvanido

<button @onclick="Refresh">Refrescar</button>

@if (result != null)
            {

    @foreach(clientSwagger.Genoma weather in result)
  
                {
                    <div>
                        @weather.Date
                        @weather.TemperatureC
                        @weather.Summary
                        
                    </div>
                }

            }


@code {

    private ICollection<clientSwagger > result;
    private clientSwagger.clientSwagger client = new clientSwagger.clientSwagger("https://localhost:5001/", new HttpClient());
    private async Task Refresh()
    {
        result = await client.GenomaAsync();
    }

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }
}